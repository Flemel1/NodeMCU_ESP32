<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_ldr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="20sp"
        android:text="@string/ldr_value"/>

    <TextView
        android:id="@+id/tv_ldr_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_ldr"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="30sp"
        android:text="0"/>

    <TextView
        android:id="@+id/tv_servo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_ldr_value"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="20sp"
        android:text="@string/servo_value"/>

    <TextView
        android:id="@+id/tv_servo_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_servo"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="30sp"
        android:text="0"/>

</androidx.constraintlayout.widget.ConstraintLayout>